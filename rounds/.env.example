# Rounds Configuration
# Copy this file to .env and populate with your values

# ===== Telemetry Backend Configuration =====
# Supported backends: signoz, jaeger, grafana
TELEMETRY_BACKEND=signoz

# SigNoz Configuration
SIGNOZ_API_URL=http://localhost:4418
SIGNOZ_API_KEY=your-api-key-here

# ===== Signature Store Configuration =====
# Supported backends: sqlite, postgresql
STORE_BACKEND=sqlite
STORE_SQLITE_PATH=./data/signatures.db

# PostgreSQL Configuration (if STORE_BACKEND=postgresql)
# DATABASE_URL=postgresql://user:password@localhost:5432/rounds

# ===== Diagnosis Engine Configuration =====
# Supported backends: claude_code, openai
DIAGNOSIS_BACKEND=claude_code

# Claude Code Configuration
# Budget per diagnosis (not daily limit)
CLAUDE_CODE_BUDGET_USD=2.0
CLAUDE_CODE_MODEL=claude-opus

# OpenAI Configuration (if DIAGNOSIS_BACKEND=openai)
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4

# ===== Notification Configuration =====
# Comma-separated list of notification adapters
NOTIFICATION_ADAPTERS=stdout

# GitHub Issue Notification
# GITHUB_TOKEN=ghp_...
# GITHUB_REPO=owner/repo

# ===== Poll Cycle Configuration =====
# Polling interval in seconds
POLL_INTERVAL_SECONDS=60

# Number of events to retrieve per poll
POLL_BATCH_SIZE=100

# ===== Budget Controls =====
# Daily limit for diagnosis spending (USD)
DAILY_BUDGET_LIMIT=100.0

# ===== Logging Configuration =====
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Structured logging output format: json or text
LOG_FORMAT=text

# ===== Run Mode =====
# Supported modes: daemon (continuous polling), cli (one-off command), webhook (HTTP server)
RUN_MODE=daemon

# ===== Codebase Configuration =====
# Path to the codebase for diagnosis context
CODEBASE_PATH=./

# ===== Development =====
# Enable verbose output and debug logging
DEBUG=false
